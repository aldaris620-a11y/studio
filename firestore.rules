
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      
      // Allow create only if user is creating their own document
      // and provides all the required fields.
      allow create: if request.auth.uid == userId &&
                      request.resource.data.keys().hasAll(['id', 'username', 'fullName', 'gender']) &&
                      request.resource.data.id == userId &&
                      request.resource.data.username is string &&
                      request.resource.data.fullName is string &&
                      request.resource.data.gender is string;

      match /game_progress/{gameProgressId} {
        allow read, write: if isOwner(userId);
      }
      
      match /user_rewards/{userRewardId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /rewards/{rewardId} {
      allow read: if request.auth != null;
    }

    match /usernames/{username} {
        // Allow creating a username if the user is authenticated and the username doesn't exist.
        allow create: if request.auth != null;
        
        // Allow deleting a username if the request comes from the user who owns it.
        // We verify ownership by checking the user's own profile document.
        allow delete: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.id;

        // Nobody can list or update usernames directly.
        allow read, list, update: if false;
    }
  }
}
