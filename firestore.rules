
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow read and delete if the user is the owner.
      // Allow write (create and update) if the user is the owner. This is more flexible
      // than separate create/update rules and helps prevent states where a profile
      // couldn't be created during signup but can be "fixed" on the first profile update.
      allow read, delete, write: if isOwner(userId);

      match /game_progress/{gameProgressId} {
        allow read, write: if isOwner(userId);
      }
      
      match /user_rewards/{userRewardId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /rewards/{rewardId} {
      allow read: if request.auth != null;
    }

    match /usernames/{username} {
        // Allow creating a username only if the user is authenticated,
        // and they are setting their own UID. The document ID must be the username.
        allow create: if request.auth != null &&
                      request.resource.data.uid == request.auth.uid &&
                      request.resource.data.keys().hasAll(['uid']);
        
        // Allow deleting a username if the request comes from the user who owns it.
        // We verify ownership by checking the user's own profile document.
        allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username == username;

        // Nobody can list or update usernames directly.
        allow read, list, update: if false;
    }
  }
}
