
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow a user to create their own profile document shortly after signing up.
      // request.auth is populated, but the write may happen before request.auth.uid is fully consistent.
      // The update/delete rules below secure the document post-creation.
      allow create: if request.auth != null;

      // Allow owner to read, update, and delete their own document.
      allow read, update, delete: if isOwner(userId);
      
      match /user_achievements/{achievementId} {
        // Allow owner to manage their own achievements.
        allow read, create, update, delete: if isOwner(userId);
      }
      
      match /game_progress/{gameProgressId} {
        // Allow owner to read and write individual game progress documents.
        allow read, write: if isOwner(userId);
      }

      // Allow the owner to list and delete multiple documents in their own subcollections.
      allow list, delete: if isOwner(userId);
    }
      
    match /rewards/{rewardId} {
      allow read: if request.auth != null;
    }
  }
}
